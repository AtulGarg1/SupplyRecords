            </HBox>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label styleClass="bold_label" text="Unit:">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="text_unit" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
