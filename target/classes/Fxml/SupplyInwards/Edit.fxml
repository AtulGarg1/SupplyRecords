         <children>
            <HBox prefWidth="200.0">
               <children>
                  <Label text="Party Name :">
                     <HBox.margin>
                        <Insets right="8.0" top="4.0" />
                     </HBox.margin>
                  </Label>
                  <AutoCompleteTextField fx:id="text_partyName" />
