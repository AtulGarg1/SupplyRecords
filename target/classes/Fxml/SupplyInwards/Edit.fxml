                     <HBox.margin>
                        <Insets left="8.0" right="8.0" top="4.0" />
                     </HBox.margin>
                  </Label>
                  <DatePicker fx:id="dp_dateFrom" promptText="dd/mm/yyyy" />
                  <Label text="Date To :">
                     <HBox.margin>
                        <Insets left="8.0" right="8.0" top="4.0" />
                     </HBox.margin>
                  </Label>
                  <DatePicker fx:id="dp_dateTo" promptText="dd/mm/yyyy" />
                  <Button mnemonicParsing="false" onAction="#onSearch" prefWidth="60.0" text="Search">
                     <HBox.margin>
                        <Insets left="16.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onClear" prefWidth="60.0" text="Clear">
                     <HBox.margin>
                        <Insets left="8.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <ScrollPane maxWidth="500.0" minWidth="500.0" prefHeight="340.0" prefWidth="500.0">
               <content>
                  <GridPane fx:id="gridPane" hgap="5.0" prefHeight="100.0" prefWidth="490.0" vgap="5.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="40.0" minWidth="40.0" prefWidth="40.0" />
                        <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints valignment="CENTER" />
                     </rowConstraints>
                     <children>
                        <Label text="S.No." />
                        <Label text="Party Name" GridPane.columnIndex="1" />
                        <Label text="Amount" GridPane.columnIndex="2" />
                        <Label text="Date" GridPane.columnIndex="3" />
                     </children>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </GridPane>
               </content>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ScrollPane>
         </children>
         <padding>
            <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
         </padding>
